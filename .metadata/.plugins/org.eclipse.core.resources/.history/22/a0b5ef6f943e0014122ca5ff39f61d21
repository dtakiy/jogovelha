    public int jogar(){
  	 
    	int fim = 0;
  	    int table [][] = new int [2][2];
  	  
  	  		for (int i=0; i<2 ; i++){
  	  			for(int j=0; j<2;j++){
  	  				
  	  				table[i][j] = 0;
  	  			}
  	  		}
  	 
  	  		return fim;
  	 }
  	  		
	@Override
    public boolean onCreateOptionsMenu(Menu menu) {
